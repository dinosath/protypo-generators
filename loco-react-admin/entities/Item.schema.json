{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Item",
  "type": "object",
  "properties": {
    "name": {
      "type": "string"
    },
    "quantity": {
      "type": "integer"
    },
    "price": {
      "type": "number"
    },
    "description":{
      "type": "string"
    },
    "purchase": {
      "type": "array",
      "items": {
        "$ref": "Purchase.json",
        "x-relationship":"many-to-many"
      }
    },
    "sale": {
      "type": "array",
      "items": {
        "$ref": "Sale.json",
        "x-relationship":"many-to-many"
      }
    }
  },
  "required": [
    "name",
    "quantity",
    "price"
  ]
}